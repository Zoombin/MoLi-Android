<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 标题栏 -->
    <style name="headLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:background">@color/title_bg_color</item>
        <item name="android:layout_marginBottom">@dimen/header_margin_bottom</item>
    </style>

    <!-- 标题栏返回按钮 -->
    <style name="headBackStyle">
        <item name="android:layout_width">@dimen/header_back_size</item>
        <item name="android:layout_height">@dimen/header_back_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/header_back_margin</item>
        <item name="android:layout_marginRight">@dimen/header_back_margin</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/btn_title_back</item>
    </style>
    <!-- 标题栏文字 -->
    <style name="headTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/tv_size_34</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 输入框 -->
    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/header_back_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/weak_text_color</item>
        <item name="android:textSize">@dimen/tv_size_30</item>
        <item name="android:textColorHint">@color/app_text_gray</item>
    </style>

    <!-- 登陆注册按钮 -->
    <style name="btnUserStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btnuser_height</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_size_34</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_black_18">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_black_20">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_14">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="text_16">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="text_18">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="text_white_bold_22">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.White.NoTitleBar" parent="android:Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.Title_Button" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="custom_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check_agreement</item>
        <item name="android:paddingLeft">23dp</item>
    </style>

    <style name="more_section_listview_style">
        <item name="android:listSelector">@*android:color/transparent</item>
        <item name="android:cacheColorHint">@*android:color/transparent</item>
        <item name="android:divider">@null</item>
    </style>

    <!-- 自定义CDialog -->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item> -->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <!-- 自定义CDialog动画 -->
    <style name="dialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_hide</item>
    </style>

    <!-- 自定义CustomProgressDialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <!-- 自定义CustomProgressDialog -->
    <style name="ProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 自定义CustomProgressDialog -->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@drawable/progress_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="common_scrollbar_style">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="product_list_group_item_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/segments_item_text_color_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_listview_style">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
    </style>

    <!-- 自定义 RatingBar -->
    <style name="ratingbar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="ratingbar_style_v2" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="FilterDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/FilterDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FilterDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/filter_slide_from_right</item>
        <item name="android:windowExitAnimation">@anim/filter_slide_to_right</item>
    </style>

    <style name="product_list_filter_listview_style">
        <item name="android:listSelector">@drawable/more_item_color_bg_selector</item>
        <item name="android:cacheColorHint">@*android:color/transparent</item>
        <item name="android:divider">@drawable/product_list_filter_divider</item>
        <item name="android:dividerHeight">1.0px</item>
    </style>

    <style name="CustomAddressDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_address_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ButtonYes">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_btn_round_orange</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonNo">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/app_text_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_btn_round_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ShareDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/ShareDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShareDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="selectCityDropDownAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="citychangeAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="Dialog_Full">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AddressSelectOneStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/AddressSelectOneAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AddressSelectOneAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_up_out</item>
    </style>

</resources>