<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_slide_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_top_bg" >

            <ImageView
                android:id="@+id/iv_back"
                style="@style/headBackStyle" />

            <RelativeLayout
                android:id="@+id/product_list_filter_switch_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:minWidth="50.0dip" >

                <Button
                    android:id="@+id/btn_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/btn_title_selector_list"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/btn_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@id/btn_switch"
                    android:background="@android:color/transparent"
                    android:minWidth="30dip"
                    android:singleLine="true"
                    android:text="筛选"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/home_homepage_top_search_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/product_list_filter_switch_rl"
                android:layout_toRightOf="@id/iv_back"
                android:background="@drawable/common_input_bg"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/home_homepage_et_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/search_icon"
                    android:focusable="false"
                    android:gravity="left|center"
                    android:hint="@string/search_good"
                    android:imeOptions="actionSearch"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingTop="2.0dip"
                    android:singleLine="true"
                    android:textColor="@color/main_default_black_text_color"
                    android:textColorHint="@color/app_text_gray"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/login_code_del_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/public_appraise_deleted"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_businessicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/result_tabs_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="#f1eff0"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/layout_item_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/product_list_tab_item_time"
                        style="@style/product_list_group_item_style"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="最新" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_item_order"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dip"
                        android:layout_height="22dip"
                        android:layout_gravity="center_vertical"
                        android:background="#dcdcdc" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_price_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/product_price_up" />

                        <TextView
                            android:id="@+id/product_list_tab_item_price"
                            style="@style/product_list_group_item_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/product_price" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_item_salesvolume"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dip"
                        android:layout_height="22dip"
                        android:layout_gravity="center_vertical"
                        android:background="#dcdcdc" />

                    <TextView
                        android:id="@+id/product_list_tab_item_salesvolume"
                        style="@style/product_list_group_item_style"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="销量" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_item_hignopinion"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dip"
                        android:layout_height="22dip"
                        android:layout_gravity="center_vertical"
                        android:background="#dcdcdc" />

                    <TextView
                        android:id="@+id/product_list_tab_item_hignopinion"
                        style="@style/product_list_group_item_style"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="好评率" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_slide_view">

        <com.imooly.android.widget.PullToRefreshListView
            android:id="@+id/category_lv_product_list"
            style="@style/common_listview_style"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/line_color"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <Button
            android:id="@+id/btn_lv_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dip"
            android:background="@drawable/list_page_num"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_lv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/btn_listview_back"
            android:visibility="gone" />

        <com.imooly.android.widget.NoDataView
            android:id="@+id/ll_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" >
        </com.imooly.android.widget.NoDataView>
    </RelativeLayout>

</RelativeLayout>