<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#e5f6f6f6"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/check_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="6dip"
        android:paddingTop="6dip" >

        <CheckBox
            android:id="@+id/shopcar_checkall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/shop_ckbox_style"
            android:checked="false"
            android:clickable="false" />

        <TextView
            android:id="@+id/shopcar_checkall_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="@color/app_text_gray"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculate_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shopcar_checkall_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:text="合计:"
            android:textColor="@color/weak_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shopcar_all_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:text="￥"
            android:textColor="@color/main_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shopcar_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:textColor="@color/main_color"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/shopcar_commit_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_text_gray"
        android:clickable="false"
        android:padding="15dip"
        android:text="结算"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>