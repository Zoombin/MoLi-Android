<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bg_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/header_back_size"
        android:layout_height="@dimen/header_back_size"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/header_back_margin"
        android:layout_marginRight="@dimen/header_back_margin"
        android:scaleType="fitXY"
        android:src="@drawable/btn_title_back" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:id="@+id/home_homepage_top_search_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_input_bg"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/home_homepage_btn_search_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2.0dip"
                android:background="@drawable/home_search_category_bg_selector"
                android:visibility="gone" />

            <EditText
                android:id="@+id/home_homepage_et_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/search_icon"
                android:gravity="left|center"
                android:hint="@string/search_good"
                android:imeOptions="actionSearch"
                android:paddingBottom="2.0dip"
                android:paddingLeft="6.0dip"
                android:paddingRight="2.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColor="@color/main_default_black_text_color"
                android:textColorHint="@color/app_text_gray"
                android:textSize="16.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_code_del_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:drawableRight="@drawable/public_appraise_deleted"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@android:color/transparent"
        android:minWidth="30dip"
        android:singleLine="true"
        android:text="搜索" />

</LinearLayout>