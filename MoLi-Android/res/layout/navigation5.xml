<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9576B3"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_navigation5_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/navigation_p5_08"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/navigation_p5_07" />

    <Button
        android:id="@+id/btn_experience"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_navigation" />

</RelativeLayout>