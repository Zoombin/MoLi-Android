<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_title"
        style="@style/headLayoutStyle" >

        <ImageView
            android:id="@+id/iv_payment_sucess_back"
            style="@style/headBackStyle" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/headTitleStyle"
            android:text="支付成功" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <!-- above title -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_20"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_pay_success"
            android:text="订单支付成功!我们将尽快发货！"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="#0e9527"
            android:textSize="@dimen/txt_size_30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/txt_payno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="订单号："
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/txt_size_26" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="已付金额："
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/txt_size_26" />

        <TextView
            android:id="@+id/txt_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_arrow_right"
            android:text="支付方式："
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/txt_size_26" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/relative_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_round_white"
                    android:text="继续购物"
                    android:textColor="@color/app_text_gray"
                    android:textSize="@dimen/txt_size_30" />

                <Button
                    android:id="@+id/btn_my_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_btn_round_orange"
                    android:src="@drawable/ic_arrow_right"
                    android:text="我的订单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_30" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>