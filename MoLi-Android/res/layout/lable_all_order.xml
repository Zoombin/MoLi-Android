<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative_all_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_height"
        android:layout_marginTop="12dp"
      	android:paddingLeft="15dp"
      	android:paddingRight="8dp"
        android:background="@drawable/selector_bg_label"
        android:clickable="true" >

        <ImageView
            android:id="@+id/image_order_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_all_order" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_order_left"
            android:text="全部订单"
            android:textColor="@color/app_text_black"
            android:textSize="@dimen/txt_size_30" />

        <ImageView
            android:id="@+id/image_order_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/text_order_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image_order_right"
            android:text="查看全部"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/txt_size_24" />
    </RelativeLayout>

</merge>