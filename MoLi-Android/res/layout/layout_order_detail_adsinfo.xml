<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_address_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_ads_txt"
                android:textColor="@color/app_text_dark_gray"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="2dip"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/order_detail_ads_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_detail_zipcode_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_detail_receiver_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginTop="6dip"
                android:src="@drawable/order_dash_line" />

            <RelativeLayout
                android:id="@+id/rl_logistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/order_detail_status_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order_detail_status_ok"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/order_detail_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginTop="6dip"
                    android:layout_toLeftOf="@+id/order_detail_status_arrow"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/app_text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_detail_status_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_detail_status_text"
                    android:layout_marginLeft="6dip"
                    android:layout_marginTop="6dip"
                    android:layout_toLeftOf="@+id/order_detail_status_arrow"
                    android:text=""
                    android:textColor="@color/app_text_gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/order_detail_status_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dip"
            android:src="@drawable/order_footer_page" />
    </LinearLayout>

</merge>