<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.imooly.android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_detail_descr_pic"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:background="@drawable/order_pic_bg"
            android:padding="3dip"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_detail_descr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:text="放假啦感觉的感觉的据了解对方 登陆减肥"
                android:textColor="@color/app_text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_detail_descr_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_descr_name"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dip"
                android:text="价格：35.00"
                android:textColor="@color/app_text_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/order_detail_descr_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_descr_name"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="6dip"
                android:layout_toRightOf="@id/order_detail_descr_price"
                android:text="数量1"
                android:textColor="@color/app_text_gray"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_descr_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_descr_num"
                android:layout_marginTop="6dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="售后状态"
                    android:textColor="@color/app_text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_detail_descr_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:text="审核通"
                    android:textColor="@color/main_color"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/op_layout"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@id/ll_descr_status"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dip"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.imooly.android.widget.HorizontalListView
                    android:id="@+id/hlistview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:cacheColorHint="#00000000"
                    android:divider="#00000000"
                    android:listSelector="#00000000"
                    app:dividerWidth="4dip" >
                </com.imooly.android.widget.HorizontalListView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dip"
        android:background="@drawable/comm_dash_line" />

</LinearLayout>