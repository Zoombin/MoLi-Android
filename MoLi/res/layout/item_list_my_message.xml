<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_label"
    android:orientation="vertical"
    android:padding="12dip" >

    <TextView
        android:id="@+id/mymessage_item_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/title"
        android:textSize="@dimen/tv_size_30" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mymessage_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock_gray" />

        <TextView
            android:id="@+id/mymessage_item_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dip"
            android:text=""
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/tv_size_24" />
    </LinearLayout>

</LinearLayout>