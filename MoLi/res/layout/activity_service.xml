<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/headLayoutStyle" >

        <ImageView
            android:id="@+id/iv_back"
            style="@style/headBackStyle" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/headTitleStyle"
            android:text="服务" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_height"
        android:layout_marginTop="@dimen/margin_top_40"
        android:background="@drawable/selector_bg_label"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_afer_sale_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_marginleft"
            android:text="售后服务"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/tv_size_30" />

        <Button
            android:id="@+id/btn_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_height"
        android:background="@drawable/selector_bg_label_call"
        android:layout_marginTop="@dimen/margin_top_20"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="客服热线"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/tv_size_30" />

        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_marginleft"
            android:layout_toRightOf="@id/text_call"
            android:text="400-8280-220"
            android:textColor="@color/main_color"
            android:textSize="@dimen/tv_size_30" />

        <ImageView
            android:id="@+id/iv_phone_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_phone_call" />
    </RelativeLayout>

</LinearLayout>