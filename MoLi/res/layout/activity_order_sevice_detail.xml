<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.imooly.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_title"
        style="@style/headLayoutStyle" >

        <ImageView
            android:id="@+id/iv_back"
            style="@style/headBackStyle" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/headTitleStyle"
            android:text="售后详情" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_20" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_level1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_white_bg"
                android:orientation="vertical"
                android:padding="8dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dip"
                        android:text="商品名称："
                        android:textColor="@color/app_text_dark_gray"
                        android:textSize="@dimen/tv_size_28" />

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/app_text_gray"
                        android:textSize="@dimen/tv_size_28" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dip"
                        android:text="售后类型："
                        android:textColor="@color/app_text_dark_gray"
                        android:textSize="@dimen/tv_size_28" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/app_text_gray"
                        android:textSize="@dimen/tv_size_28" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dip"
                        android:text="售后状态："
                        android:textColor="@color/app_text_dark_gray"
                        android:textSize="@dimen/tv_size_28" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/tv_size_28" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dip"
                        android:text="申请时间："
                        android:textColor="@color/app_text_dark_gray"
                        android:textSize="@dimen/tv_size_28" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/app_text_gray"
                        android:textSize="@dimen/tv_size_28" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_payback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dip"
                        android:text="应退金额："
                        android:textColor="@color/app_text_dark_gray"
                        android:textSize="@dimen/tv_size_28" />

                    <TextView
                        android:id="@+id/tv_payback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/app_text_gray"
                        android:textSize="@dimen/tv_size_28" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_reVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dip"
                        android:text="应退代金券："
                        android:textColor="@color/app_text_dark_gray"
                        android:textSize="@dimen/tv_size_28" />

                    <TextView
                        android:id="@+id/tv_reVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/app_text_gray"
                        android:textSize="@dimen/tv_size_28" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_level2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_white_top_bg"
                    android:orientation="vertical"
                    android:padding="8dip" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dip"
                            android:text="问题描述："
                            android:textColor="@color/app_text_dark_gray"
                            android:textSize="@dimen/tv_size_28" />

                        <TextView
                            android:id="@+id/tv_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/app_text_gray"
                            android:textSize="@dimen/tv_size_28" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dip"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dip"
                            android:text="商家备注："
                            android:textColor="@color/app_text_dark_gray"
                            android:textSize="@dimen/tv_size_28" />

                        <TextView
                            android:id="@+id/tv_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/app_text_gray"
                            android:textSize="@dimen/tv_size_28" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_server_pic_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dip"
                            android:text="图片凭证："
                            android:textColor="@color/app_text_dark_gray"
                            android:textSize="@dimen/tv_size_28" />

                        <com.imooly.android.widget.HorizontalListView
                            android:id="@+id/order_server_hlistview"
                            android:layout_width="match_parent"
                            android:layout_height="60dip"
                            android:layout_marginLeft="6dip"
                            android:cacheColorHint="#00000000"
                            android:divider="#00000000"
                            android:listSelector="#00000000"
                            app:dividerWidth="4dip" >
                        </com.imooly.android.widget.HorizontalListView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_level3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_address_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_white_top_bg"
                    android:orientation="vertical"
                    android:padding="8dip" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="6dip" >

                        <TextView
                            android:id="@+id/address_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="我的收货地址"
                            android:textColor="@color/app_text_dark_gray"
                            android:textSize="@dimen/tv_size_30" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="6dip"
                            android:background="@color/line_color" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/address_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dip"
                                android:text="的路口固件的空间靠的是鉴定费看电视剧快到了房间的快乐飞鉴定费"
                                android:textColor="@color/app_text_gray"
                                android:textSize="@dimen/tv_size_28" />

                            <TextView
                                android:id="@+id/zipcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dip"
                                android:text="555454"
                                android:textColor="@color/app_text_gray"
                                android:textSize="@dimen/tv_size_28" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dip"
                                android:text="胡一菲      1634555454"
                                android:textColor="@color/app_text_gray"
                                android:textSize="@dimen/tv_size_28" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dip"
                    android:src="@drawable/order_footer_page" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>