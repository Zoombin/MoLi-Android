<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_title"
        style="@style/headLayoutStyle" >

        <ImageView
            android:id="@+id/iv_back"
            style="@style/headBackStyle" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/headTitleStyle"
            android:text="@string/register_phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/header_back_margin"
        android:layout_marginTop="@dimen/margin_top_40"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/register_phone_info"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/tv_size_24" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/main_color"
            android:textSize="@dimen/tv_size_30" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_pwd"
        style="@style/editTextStyle"
        android:hint="@string/hint_password"
        android:inputType="textPassword" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <EditText
        android:id="@+id/et_pwdconfirm"
        style="@style/editTextStyle"
        android:hint="@string/hint_password_confirm"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/btnUserStyle"
        android:layout_marginTop="@dimen/margin_top_30"
        android:text="@string/register" />


</LinearLayout>