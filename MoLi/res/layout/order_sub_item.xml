<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_item_pic"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:background="@drawable/order_pic_bg"
            android:padding="1dip"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dip"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_28" />

            <TextView
                android:id="@+id/order_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_detail"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="6dip"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />

            <TextView
                android:id="@+id/order_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/order_item_detail"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:layout_marginTop="6dip"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />

            <TextView
                android:id="@+id/order_item_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_num"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="6dip"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/order_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

</LinearLayout>