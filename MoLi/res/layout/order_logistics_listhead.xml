<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_express_icon"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:background="@drawable/order_pic_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_express_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/app_text_black"
                android:textSize="@dimen/tv_size_30" />

            <TextView
                android:id="@+id/order_express_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />

            <TextView
                android:id="@+id/order_express_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/line_color"
        android:visibility="gone" />

</LinearLayout>