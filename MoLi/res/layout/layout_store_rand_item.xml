<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_selector_center_v2"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/store_rand_pic"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/store_rand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/app_text_dark_gray"
            android:textSize="@dimen/tv_size_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/store_rand_type_icon"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />

            <TextView
                android:id="@+id/store_rand_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/ic_location_mark_s" />

            <TextView
                android:id="@+id/store_rand_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:singleLine="true"
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>