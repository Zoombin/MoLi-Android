<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.imooly.android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_detail_descr_pic"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:background="@drawable/order_pic_bg"
            android:padding="1dip"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_detail_descr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:text="放假啦感觉的感觉的据了解对方 登陆减肥"
                android:textColor="@color/app_text_dark_gray"
                android:textSize="@dimen/tv_size_28" />

            <TextView
                android:id="@+id/order_detail_descr_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_descr_name"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:text="价格：35.00"
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />

            <TextView
                android:id="@+id/order_detail_descr_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_descr_name"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/order_detail_descr_price"
                android:text="数量1"
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />

            <TextView
                android:id="@+id/order_detail_descr_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_descr_num"
                android:layout_marginTop="@dimen/dp_5"
                android:text="属性"
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/tv_size_24" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_descr_spec"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_descr_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="售后状态"
                        android:textColor="@color/app_text_gray"
                        android:textSize="@dimen/tv_size_24" />

                    <TextView
                        android:id="@+id/order_detail_descr_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/tv_size_30" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/op_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <!--
                    <com.imooly.android.widget.HorizontalListView
	                    android:id="@+id/hlistview"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:cacheColorHint="#00000000"
	                    android:divider="#00000000"
	                    android:listSelector="#00000000"
	                    app:dividerWidth="4dip" >
	                </com.imooly.android.widget.HorizontalListView>
                    -->

                    <com.imooly.android.widget.HorizontalLinearLayout
                        android:id="@+id/hlistview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >
                    </com.imooly.android.widget.HorizontalLinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/comm_dash_line" />

</LinearLayout>