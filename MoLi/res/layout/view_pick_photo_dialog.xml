<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/common_input_bg"
        android:orientation="vertical"
        android:padding="10dip" >

        <!-- Title -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_label"
                android:gravity="left|center_vertical"
                android:padding="10dip"
                android:text=""
                android:textColor="@color/title"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/selector_ic_delete" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/pick_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_label"
            android:drawableLeft="@drawable/ic_photo"
            android:drawablePadding="6dip"
            android:gravity="left|center_vertical"
            android:padding="10dip"
            android:text="@string/pick_photo"
            android:textColor="@color/app_text_gray"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/pick_camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_label"
            android:drawableLeft="@drawable/ic_camera"
            android:drawablePadding="6dip"
            android:gravity="left|center_vertical"
            android:padding="10dip"
            android:text="@string/pick_camera"
            android:textColor="@color/app_text_gray"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>