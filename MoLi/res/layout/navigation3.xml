<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C62E"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_nav3_static"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/navigation_p3_bg" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="网购你能忍受哪一次？"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_p3_head"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_p3_tv1"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_p3_tv2"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_p3_tv3"
        android:scaleType="fitXY"
        android:visibility="gone" />

</RelativeLayout>